{
    "name": "Lexia",
    "version": "1.1.0",
    "description": "Dislexic syntax highlighter",
    "manifest_version": 3,
    "author": "Ben Feldberg",
    "action": {
        "default_popup": "options.html",
        "default_title": "Lexia"
    },
    "background": {
        "service_worker": "extension/background.js"
    },
    "commands": {
        "lexia": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "Start \"Lexia\" selection on the current page."
        }
    },
    "permissions": ["tabs", "activeTab", "scripting", "storage"]
}
